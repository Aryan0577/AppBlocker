<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 300">
    <!-- Background Circle -->
    <circle cx="150" cy="150" r="140" fill="#2B5797" />
    <circle cx="150" cy="150" r="125" fill="#1E3A64" />

    <!-- Clock Face -->
    <circle cx="150" cy="150" r="110" fill="#FFFFFF" />
    <circle cx="150" cy="150" r="5" fill="#333333" />

    <!-- Clock Markings -->
    <line x1="150" y1="60" x2="150" y2="80" stroke="#333333" stroke-width="4" />
    <line x1="150" y1="220" x2="150" y2="240" stroke="#333333" stroke-width="4" />
    <line x1="60" y1="150" x2="80" y2="150" stroke="#333333" stroke-width="4" />
    <line x1="220" y1="150" x2="240" y2="150" stroke="#333333" stroke-width="4" />

    <!-- Clock Hands -->
    <line x1="150" y1="150" x2="150" y2="90" stroke="#E74C3C" stroke-width="5" stroke-linecap="round" />
    <line x1="150" y1="150" x2="195" y2="175" stroke="#333333" stroke-width="6" stroke-linecap="round" />

    <!-- Pause Symbol -->
    <rect x="135" y="125" width="10" height="50" fill="#E74C3C" rx="2" />
    <rect x="155" y="125" width="10" height="50" fill="#E74C3C" rx="2" />

    <!-- Text -->
    <text x="150" y="215" font-family="Arial, sans-serif" font-size="24" font-weight="bold" text-anchor="middle" fill="#333333">TIME</text>
    <text x="150" y="245" font-family="Arial, sans-serif" font-size="26" font-weight="bold" text-anchor="middle" fill="#E74C3C">OUT</text>
</svg>